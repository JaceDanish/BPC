<Page
    x:Class="BPCMain.View.DisplayBookingCompany"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BPCMain.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="using:BPCMain.ViewModel"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <viewModel:BookingVM/>
    </Page.DataContext>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Image Source="ms-appx:///Assets/freeway Opacity 50.jpg" Stretch="Fill" Grid.ColumnSpan="3"/>

        <Grid Background="Black" Opacity="0.80" Width="Auto" Height="45" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" Height="45" Width="auto" HorizontalAlignment="Center">
                <Button Style="{StaticResource MenuBarButtonStyle}" HorizontalAlignment="Right" Content="About Us" Command="{Binding}"/>
                <Button Style="{StaticResource MenuBarButtonStyle}" HorizontalAlignment="Right" Content="FAQ" Command="{Binding}"/>
                <Button Style="{StaticResource MenuBarButtonStyle}" HorizontalAlignment="Right" Content="Bookings" Command="{Binding}"/>
                <Button Style="{StaticResource MenuBarButtonStyle}" HorizontalAlignment="Right" Content="Ny side" Command="{Binding}"/>
                <Button Style="{StaticResource MenuBarButtonStyle}" HorizontalAlignment="Right" Content="Ny side" Command="{Binding}"/>
                <Button Style="{StaticResource MenuBarButtonStyle}" HorizontalAlignment="Right" Content="Ny side" Command="{Binding}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Width="300" Height="45">
                <Button Style="{StaticResource MenuBarButtonStyle}" HorizontalAlignment="Left" Content="Tilbage" Command="{Binding BackCommand}"/>
            </StackPanel>
        </Grid>

        <StackPanel Orientation="Vertical" 
                        VerticalAlignment="Top" 
                        Width="600" Height="100" 
                        Margin="0,75" 
                        HorizontalAlignment="Center">

                        <TextBlock Text="Mine Bookinger" 
                           Width="750" Height="100" 
                           TextAlignment="Center" 
                           HorizontalAlignment="Center"
                           Style="{StaticResource HeaderTextBlockStyle}"
                           FontWeight="Bold"/>
                    </StackPanel>

        <StackPanel Orientation="Vertical" 
                    HorizontalAlignment="Center" 
                    Width="1100" 
                    Height="700" 
                    Margin="200">

            <StackPanel Orientation="Horizontal"
            Margin="10"
            Width="1200"
            Height="50">
                <TextBlock Text="Ordre Nr" Style="{StaticResource TextBlockStyle1}" Width="100"/>
                <TextBlock Text="Start By" Style="{StaticResource TextBlockStyle1}"  Width="100"/>
                <TextBlock Text="Dato og Tid" Style="{StaticResource TextBlockStyle1}" Width="220"/>
                <TextBlock Text="Slut By" Style="{StaticResource TextBlockStyle1}" Width="100"/>
                <TextBlock Text="Dato og tid" Style="{StaticResource TextBlockStyle1}" Width="220"/>
                <TextBlock Text="Godsart" Style="{StaticResource TextBlockStyle1}" Width="100"/>
                <TextBlock Text="Status" Style="{StaticResource TextBlockStyle1}" Width="150"/>
            </StackPanel>
            <StackPanel Height="300">
                <ListView ItemsSource="{Binding Bookings}" SelectedItem="{Binding SelectedBooking, Mode=TwoWay}" 
	                  ScrollViewer.VerticalScrollBarVisibility="Visible" 
	                  Background="#696969" Margin="0,0,0,0" SelectionChanged="ListView_SelectionChanged" Width="1100">
		        <ListView.ItemTemplate>
			        <DataTemplate>
				        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource TextBlockStyle1}" Width ="100" Text="{Binding OrderNo}"/>
                                <TextBlock Style="{StaticResource TextBlockStyle1}" Width ="100" Text="{Binding StartCity}"/>
                                <TextBlock Style="{StaticResource TextBlockStyle1}" Width ="220" Text="{Binding StartDate}"/>
                                <TextBlock Style="{StaticResource TextBlockStyle1}" Width ="100" Text="{Binding EndCity}"/>
                                <TextBlock Style="{StaticResource TextBlockStyle1}" Width ="220" Text="{Binding EndDate}"/>
                                <TextBlock Style="{StaticResource TextBlockStyle1}" Width ="100" Text="{Binding TypeOfGoods}"/>
                                <TextBlock Style="{StaticResource TextBlockStyle1}" Width ="150" Text="{Binding Status}"/>
                            </StackPanel>
                    </DataTemplate>
		        </ListView.ItemTemplate>
	        </ListView>
            </StackPanel>

                <StackPanel Orientation="Horizontal" Width="1100" VerticalAlignment="Bottom" Height="290">
                <StackPanel Orientation="Vertical">
                
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource TextBlockStyle4}" Width="100" Text="OrderNo" ></TextBlock>
                        <TextBlock Style="{StaticResource TextBlockStyle1}" Width ="100" Text="{Binding SelectedBooking.OrderNo}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource TextBlockStyle4}" Width="100" Text="Status" ></TextBlock>
                            <TextBlock Style="{StaticResource TextBlockStyle1}" Width ="100" Text="{Binding SelectedBooking.Status}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource TextBlockStyle4}" Width="100" Text="CVR" ></TextBlock>
                            <TextBlock Style="{StaticResource TextBlockStyle1}" Width ="100" Text="{Binding SelectedBooking.CompanyCvrNo}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource TextBlockStyle4}" Width="100" Text="Antal biler" ></TextBlock>
                            <TextBlock Style="{StaticResource TextBlockStyle1}" Width ="100" Text="{Binding SelectedBooking.NumOfCarsNeeded}"/>
                        </StackPanel>

                    <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource TextBlockStyle4}" Width="100" Text="Kommentar" />
                            <TextBlock Style="{StaticResource TextBlockStyle1}" Width ="100" Text="{Binding SelectedBooking.Comment}"/>
                        </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource TextBlockStyle4}" Width="100" Text="Kommentar2" />
                        <TextBlock Style="{StaticResource TextBlockStyle1}" Width ="100" Text="{Binding SelectedBooking.Comment}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource TextBlockStyle4}" Width="100" Text="Kommentar3" />
                        <TextBlock Style="{StaticResource TextBlockStyle1}" Width ="100" Text="{Binding SelectedBooking.Comment}"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource TextBlockStyle4}" Width="100" Text="Kommentar" />
                        <TextBlock Style="{StaticResource TextBlockStyle1}" Width ="100" Text="{Binding SelectedBooking.Comment}"/>
                    </StackPanel>
                </StackPanel>

                <!--<TextBlock Style="{StaticResource TextBlockStyle1}" Width ="150" Text="{Binding SelectedBooking.Contactperson}"/>
                        <TextBlock Style="{StaticResource TextBlockStyle1}" Width ="150" Text="{Binding SelectedBooking.TruckdriverEMail}"/>-->
                    </StackPanel>

                    <TextBlock Style="{StaticResource TextBlockStyle1}" Width ="150" Text="{Binding SelectedBooking.StartDate}"/>
                    <TextBlock Style="{StaticResource TextBlockStyle1}" Width ="100" Text="{Binding SelectedBooking.StartAddress}"/>
                    <TextBlock Style="{StaticResource TextBlockStyle1}" Width ="100" Text="{Binding SelectedBooking.StartCity}"/>
                    <TextBlock Style="{StaticResource TextBlockStyle1}" Width ="150" Text="{Binding SelectedBooking.StartPostalCode}"/>
                    <TextBlock Style="{StaticResource TextBlockStyle1}" Width ="100" Text="{Binding SelectedBooking.StartCountry}"/>

                    <TextBlock Style="{StaticResource TextBlockStyle1}" Width ="100" Text="{Binding SelectedBooking.TypeOfGoods}"/>
                    <TextBlock Style="{StaticResource TextBlockStyle1}" Width ="100" Text="{Binding SelectedBooking.TotalWidth}"/>
                    <TextBlock Style="{StaticResource TextBlockStyle1}" Width ="100" Text="{Binding SelectedBooking.TotalLength}"/>
                    <TextBlock Style="{StaticResource TextBlockStyle1}" Width ="150" Text="{Binding SelectedBooking.TotalHeight}"/>
                    <TextBlock Style="{StaticResource TextBlockStyle1}" Width ="150" Text="{Binding SelectedBooking.TotalWeight}"/>

                    <TextBlock Style="{StaticResource TextBlockStyle1}" Width ="150" Text="{Binding SelectedBooking.EndDate}"/>
                    <TextBlock Style="{StaticResource TextBlockStyle1}" Width ="100" Text="{Binding SelectedBooking.EndAddress}"/>
                    <TextBlock Style="{StaticResource TextBlockStyle1}" Width ="100" Text="{Binding SelectedBooking.EndCity}"/>
                    <TextBlock Style="{StaticResource TextBlockStyle1}" Width ="150" Text="{Binding SelectedBooking.EndPostalCode}"/>
                    <TextBlock Style="{StaticResource TextBlockStyle1}" Width ="100" Text="{Binding SelectedBooking.EndCountry}"/>

                

        </StackPanel>
    </Grid>
</Page>
