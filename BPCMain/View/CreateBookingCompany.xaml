<Page
    x:Class="BPCMain.View.CreateBookingCompany"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BPCMain.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="using:BPCMain.ViewModel"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <viewModel:BookingVM/>
    </Page.DataContext>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="850"/>
        </Grid.RowDefinitions>

        <Image Grid.Row="0" Grid.RowSpan="3" Source="ms-appx:///Assets/freeway Opacity 50.jpg" Stretch="Fill"/>

        <Grid Background="Black" Opacity="0.80" Width="Auto" Height="45" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" Height="45" Width="auto" HorizontalAlignment="Center">
                <Button Style="{StaticResource MenuBarButtonStyle}" HorizontalAlignment="Right" Content="Om BPC" Command="{Binding AboutBpcCommand}"/>
                <Button Style="{StaticResource MenuBarButtonStyle}" HorizontalAlignment="Right" Content="FAQ" Command="{Binding FAQCommand}"/>
                <Button Style="{StaticResource MenuBarButtonStyle}" HorizontalAlignment="Right" Content="Kontakt os" Command="{Binding ContactBpcCommand}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Width="300" Height="45" Grid.Row="0" VerticalAlignment="Top">
                <Button Style="{StaticResource MenuBarButtonStyle}" HorizontalAlignment="Left" Content="Back" Command="{Binding BackCommand}"/>
            </StackPanel>
        </Grid>
        <!--Header-->
        <StackPanel Grid.Row="1" Style="{StaticResource HeaderPanelStyle1}">
            <TextBlock Text="Ny Booking" Style="{StaticResource Header1}"/>
        </StackPanel>

        <!--<Grid Grid.Row="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				-->
        <!--<ColumnDefinition Width="*"/>-->

        <!--<ColumnDefinition Width="695"/>-->
        <!--
			</Grid.ColumnDefinitions>-->

        <StackPanel Grid.Row="2" Orientation="Horizontal">

            <StackPanel Margin="100,50">
                <StackPanel Style="{StaticResource PanelStyle3}">
                    <TextBlock Style="{StaticResource TextBlockStyle1}"	Text="Kontaktperson*"/>
                    <TextBox Style="{StaticResource TextBoxStyle2}" Text ="{Binding Contactperson}">
                    </TextBox>
                    <!--<CalendarDatePicker Date="{Binding SDate}" DateFormat="{}{month.integer} {day.integer}, {year.integer}" />-->
                    <TimePicker SelectedTime="{Binding STime}"/>
                </StackPanel>

                <StackPanel Style="{StaticResource PanelStyle3}" Height="60">
                    <TextBlock Style="{StaticResource TextBlockStyle1}" Margin="100,0"
                               Text="Start Informationer"/>
                </StackPanel>

                <StackPanel Style="{StaticResource PanelStyle3}">
                    <TextBlock Style="{StaticResource TextBlockStyle1}"
				           Text="RESERVERET TIL DATETIME*"/>
                    <TextBox Style="{StaticResource TextBoxStyle2}" Text ="{Binding}"/>
                </StackPanel>


                <StackPanel Style="{StaticResource PanelStyle3}">
                    <TextBlock Style="{StaticResource TextBlockStyle1}"
					        Text="Gadenavn og nr.*"/>
                    <TextBox Style="{StaticResource TextBoxStyle2}" Text ="{Binding StartAddress}"/>
                </StackPanel>

                <StackPanel Style="{StaticResource PanelStyle3}">
                    <TextBlock Style="{StaticResource TextBlockStyle1}" 
				           Text="Postnummer*"/>
                    <TextBox Style="{StaticResource TextBoxStyle2}" Text ="{Binding StartPostalCode}"/>
                </StackPanel>

                <StackPanel Style="{StaticResource PanelStyle3}">
                    <TextBlock Style="{StaticResource TextBlockStyle1}" 
				           Text="By*"/>
                    <TextBox Style="{StaticResource TextBoxStyle2}" Text ="{Binding StartCity}"/>
                </StackPanel>

                <StackPanel Style="{StaticResource PanelStyle3}">
                    <TextBlock Style="{StaticResource TextBlockStyle1}" 
						           Text="Land*"/>
                    <TextBox Style="{StaticResource TextBoxStyle2}" Text ="{Binding StartCountry}"/>
                </StackPanel>

                <StackPanel Style="{StaticResource PanelStyle3}" Height="60">
                    <TextBlock Style="{StaticResource TextBlockStyle1}" Margin="100,0"
                               Text="Slut Informationer"/>
                </StackPanel>

                <StackPanel Style="{StaticResource PanelStyle3}">
                    <TextBlock Style="{StaticResource TextBlockStyle1}" 
				           Text="RESERVERET TIL DATATIME*"/>
                    <TextBox Style="{StaticResource TextBoxStyle2}" Text ="{Binding}"/>
                </StackPanel>

                <StackPanel Style="{StaticResource PanelStyle3}">
                    <TextBlock Style="{StaticResource TextBlockStyle1}" 
				           Text="Gadenavn og nr.*"/>
                    <TextBox Style="{StaticResource TextBoxStyle2}" Text ="{Binding EndAddress}"/>
                </StackPanel>

                <StackPanel Style="{StaticResource PanelStyle3}">
                    <TextBlock Style="{StaticResource TextBlockStyle1}" 
				           Text="Postnummer*"/>
                    <TextBox Style="{StaticResource TextBoxStyle2}" Text ="{Binding EndPostalCode}"/>
                </StackPanel>

                <StackPanel Style="{StaticResource PanelStyle3}">
                    <TextBlock Style="{StaticResource TextBlockStyle1}" 
						           Text="By*"/>
                    <TextBox Style="{StaticResource TextBoxStyle2}" Text ="{Binding EndCity}"/>
                </StackPanel>

                <StackPanel Style="{StaticResource PanelStyle3}">
                    <TextBlock Style="{StaticResource TextBlockStyle1}" 
				           Text="Land*"/>
                    <TextBox Style="{StaticResource TextBoxStyle2}" Text ="{Binding EndCity}"/>
                </StackPanel>
            </StackPanel>


            <StackPanel Margin="100,50">

                <StackPanel Style="{StaticResource PanelStyle3}" Height="40">
                    <TextBlock Style="{StaticResource TextBlockStyle1}" Margin="100,0"
                               Text="Gods Informationer"/>
                </StackPanel>

                <StackPanel Style="{StaticResource PanelStyle3}">
                    <TextBlock Style="{StaticResource TextBlockStyle1}"	Text="Godsart*"/>
                    <TextBox Style="{StaticResource TextBoxStyle2}" Text ="{Binding TypeOfGoods}">
                    </TextBox>
                </StackPanel>
                <StackPanel Style="{StaticResource PanelStyle3}">
                    <TextBlock Style="{StaticResource TextBlockStyle1}"
				           Text="Total bredde*"/>
                    <TextBox Style="{StaticResource TextBoxStyle2}" Text ="{Binding TotalWidth}"/>
                </StackPanel>
                <StackPanel Style="{StaticResource PanelStyle3}">
                    <TextBlock Style="{StaticResource TextBlockStyle1}"
					        Text="Total længde*"/>
                    <TextBox Style="{StaticResource TextBoxStyle2}" Text ="{Binding TotalLength}"/>
                </StackPanel>
                <StackPanel Style="{StaticResource PanelStyle3}">
                    <TextBlock Style="{StaticResource TextBlockStyle1}" 
				           Text="Total højde*"/>
                    <TextBox Style="{StaticResource TextBoxStyle2}" Text ="{Binding TotalHeight}"/>
                </StackPanel>
                <StackPanel Style="{StaticResource PanelStyle3}">
                    <TextBlock Style="{StaticResource TextBlockStyle1}" 
				           Text="Total vægt*"/>
                    <TextBox Style="{StaticResource TextBoxStyle2}" Text ="{Binding TotalWeight}"/>
                </StackPanel>

                <StackPanel Style="{StaticResource PanelStyle3}">
                    <TextBlock Style="{StaticResource TextBlockStyle1}" 
                               Text="Antal følgebiler*"/>
                    <TextBox Style="{StaticResource TextBoxStyle2}" Text ="{Binding NumOfCarsNeeded}"/>
                </StackPanel>

                <StackPanel Style="{StaticResource PanelStyle3}" Height="40">
                    <TextBlock Style="{StaticResource TextBlockStyle1}" Margin="100,0"
                               Text="Lastbilchauffør"/>
                </StackPanel>

                <StackPanel Style="{StaticResource PanelStyle3}">
                    <TextBlock Style="{StaticResource TextBlockStyle1}" 
                               Text="Telefonnummer*"/>
                    <TextBox Style="{StaticResource TextBoxStyle2}" Text ="{Binding TruckdriverId}"/>
                </StackPanel>

                <StackPanel Style="{StaticResource PanelStyle3}">
                    <TextBlock Style="{StaticResource TextBlockStyle1}" 
                               Text="Email*"/>
                    <TextBox Style="{StaticResource TextBoxStyle2}" Text ="{Binding TruckdriverEMail}"/>
                </StackPanel>

                <StackPanel Style="{StaticResource PanelStyle3}" Height="60">
                    <TextBlock Style="{StaticResource TextBlockStyle1}" Margin="100,0"
                               Text="Kommentar"/>
                </StackPanel>

                <StackPanel Style="{StaticResource PanelStyle3}">
                    <TextBox Style="{StaticResource TextBoxStyle2}" Text ="{Binding Comment}" Height="100" Width="500"/>
                </StackPanel>




                <StackPanel Style="{StaticResource PanelStyle3}">
                    <TextBlock Style="{StaticResource TextBlockStyle2}"
						           Text="Alle bokse med * skal udfyldes"/>

                    <Button Content="Lav booking"
						        Margin="40,0,0,0"
						        x:Name="Createbooking1"
						        Style="{StaticResource MenuBarButtonStyle}"
						        FontSize="22"
						        Command="{Binding CreateBookingCompany}">
                    </Button>
                </StackPanel>
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
